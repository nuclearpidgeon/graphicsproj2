<SwapChainBackgroundPanel x:Name="mainPanel"
    x:Class="Project2.Pages.GamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Project2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"    
    d:DesignWidth="1280"
    d:DesignHeight="800">
    <AppBar x:Name="pauseBar" Height="90" VerticalAlignment="Top" Canvas.ZIndex="1">
        <StackPanel Orientation="Horizontal">
            <AppBarButton x:ConnectionId='1' x:Name="menuBtn" Label="Menu" Icon="Back"                      />
            <AppBarButton x:ConnectionId='2' x:Name="unpauseBtn" Label="Unpause" Icon="Play"                         />
            <AppBarButton x:ConnectionId='3' x:Name="restartBtn" Label="Restart" Icon="RepeatAll"                         />
        </StackPanel>
    </AppBar>
    <Grid x:Name="pauseOverlay">
        <Viewbox>
            <Rectangle Fill="#FF000000" Width="1280" Height="800" Opacity="0.7"/>
        </Viewbox>
        <TextBlock Text="Paused" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FFF1F1F1" ></TextBlock>
    </Grid>
</SwapChainBackgroundPanel>

